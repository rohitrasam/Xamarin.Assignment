<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="UserList" TargetType="FlexLayout">
        <Setter Property="JustifyContent" Value="SpaceBetween" />
        <Setter Property="Padding" Value="10,0" />
        <Setter Property="AlignItems" Value="Center" />
    </Style>
    <Style x:Key="Button" TargetType="Button">
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="BackgroundColor" Value="LightBlue" />
        <Setter Property="BorderWidth" Value="1.5" />
        <Setter Property="CornerRadius" Value="50" />
        <Setter Property="BorderColor" Value="ForestGreen" />
    </Style>
</ResourceDictionary>